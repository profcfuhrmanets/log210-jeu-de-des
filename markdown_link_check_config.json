{
    "httpHeaders": [
        {
            "urls": [
                "https://docs.github.com/"
            ],
            "headers": {
                "Accept-Encoding": "zstd, br, gzip, deflate"
            }
        }
    ],

    "ignorePatterns": [
        {
            "pattern": "^http://localhost",
            "comment": "Ignore local links"
        },
        {
            "pattern": "^https?://www.plantuml.com/.*$",
            "comment": "Ignore PlantUML diagrams (timeout can be long)"
        },
        {
            "pattern": "^https?://stackoverflow.com/.*$",
            "comment": "Ignore Stack Overflow links that return 403 from GitHub Actions"
        },
        {
            "pattern": "^https?://.*\\.stackexchange.com/.*$",
            "comment": "Ignore Stack Exchange links that return 403 from GitHub Actions"
        }
    ]
} 
