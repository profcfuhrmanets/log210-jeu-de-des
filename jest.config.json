{
  "preset": "ts-jest",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "index.ts",
    "express-flash-plus.d.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageProvider": "babel",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "diagnostics": true,
        "isolatedModules": true,
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "testEnvironment": "jest-environment-node",
  "setupFilesAfterEnv": [
    "jest-extended/all"
  ],
  "verbose": false
}