{
    "name": "ets-log210-typescript-node-api",
    "version": "2.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc -b --verbose && shx --verbose cp -ru public dist/",
        "start": "node dist/index.js",
        "watch": "jest --watch --coverage test",
        "test": "jest --env=node --colors --coverage test",
        "uml-classes-puml": "tplant -i src/app.ts -A -o docs/modeles/App.puml",
        "uml-classes-svg": "tplant -i src/app.ts -A -o docs/modeles/App.svg",
        "circular": "madge src/app.ts -c",
        "madge": "madge src/app.ts -i madge.png; open madge.png",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run build && npm start",
        "ext": "ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/debug": "^4.1.8",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/jest": "^29.5.4",
        "@types/morgan": "^1.9.5",
        "@types/node": "^20.5.7",
        "@types/supertest": "^2.0.12",
        "chai": "^4.3.8",
        "chai-http": "^4.4.0",
        "gitinspector": "^0.5.0-dev-2",
        "http-request-mock": "^1.8.17",
        "jest": "^29.6.4",
        "jest-extended": "^4.0.1",
        "madge": "^6.1.0",
        "nodemon": "^3.0.1",
        "shx": "^0.3.4",
        "supertest": "^6.3.3",
        "tplant": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "express-flash-plus": "^0.0.7",
        "express-session": "^1.17.3",
        "md5": "^2.3.0",
        "morgan": "^1.10.0",
        "pug": "^3.0.2"
    }
}
